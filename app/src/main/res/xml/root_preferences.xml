<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

	<PreferenceCategory
		app:title="@string/language_header"
		app:icon="@drawable/ic_translate_black_24dp">

		<Preference
			app:key="language"
			app:title="@string/language_title"
			app:useSimpleSummaryProvider="true" />

	</PreferenceCategory>

	<PreferenceCategory
		app:title="@string/reminder_header"
		app:icon="@drawable/ic_notifications_black_24dp">

		<SwitchPreferenceCompat
			app:key="daily"
			app:title="@string/daily_title"
			app:summary="@string/daily_summary" />

		<SwitchPreferenceCompat
			app:key="release_today"
			app:title="@string/release_today_title"
			app:summary="@string/release_today_summary" />

	</PreferenceCategory>

</PreferenceScreen>
